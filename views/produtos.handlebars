  <section class="cardapio" id="cardapio">
    <div class="cardapio-comidas">
      <h3 class="h3-cardapio">Comida</h3>
      <div class="cards">
        {{#each rowsC}}
        <div class="card">
          <div class="cardImg">
            <img src="{{ imgProd }}">
          </div>
          <div class="cardBody">
            <div class="titulo">
              <h2>
                {{ nome }}
              </h2>
            </div>
            <div class="text">
              <p>
                Quantidade atual: {{ quantidade }}
              </p>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>

    <div class="cardapio-bebidas">
      <h3 class="h3-cardapio">Bebidas</h3>

      <div class="cards">
        {{#each rowsB}}
