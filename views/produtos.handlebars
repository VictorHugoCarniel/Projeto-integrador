                {{ nome }}
              </h2>
            </div>
            <div class="text">
              <p>
                Quantidade atual: {{ quantidade }}
              </p>
            </div>   
              <div class="text">
              <h3>
               Preço:  {{ preco }}
              </h3>
            </div>      
          </div>
        </div>
        {{/each}}
