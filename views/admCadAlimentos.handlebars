  <link rel="stylesheet" href="public/css/default.css" />

  <link rel="stylesheet" href="public/css/header.css" />

  <link rel="stylesheet" href="public/css/form.css" />

  <link rel="stylesheet" href="public/css/cadastro.css" />

  <link rel="stylesheet" href="public/css/admCadAlimentos.css" />

  <link rel="shortcut icon" sizes="32x32" href="/public/images/senaclogo-removebg-preview.png">

  <meta name="description" content="A confeitaria do Senac proporciona o melhor para o seu bem-estar e alimentação" />

  <title>| Administrador</title>
</head>

<body>
  <header>
    <a href="https://www.senac.br" target="_blank">
      <div class="logo"><i class="fas fa-utensils"></i></div>
    </a>
    <button class="navbar--btnMobile" id="navbar--btnMobile">
      <span class="btnMobile--icon"></span>
    </button>
    <nav class="navbar" id="navbar">
      <div class="navbar--links">
        <a href="/home" class="animateLink" onclick="LinkActive()">
          <div class="link">Home<span class="link--linha"></span></div>
        </a>
        <a href="/admQtd" class="animateLink" onclick="LinkActive()">
          <div class="link">Quantidade<span class="link--linha"></span></div>
        </a>
        <a href="#lanches" class="animateLink" onclick="LinkActive()">
          <div class="link active">Alimentos<span class="link--linha"></span></div>
        </a>
      </div>
      <div class="navbar--login">
        <a href="/home">
          <div class="sair">Sair</div>
        </a>
      </div>
    </nav>
  </header>

  <main class="container">
    <section class="cadastro--container">
      <div class="cadastro--title">
        <h1>Cadastrar alimento:</h1>
      </div>
      <form class="row g-3" action="/add-alimentos" id="image-form" method="post">
        <form class="row g-3" action="/cad-alim" method="post">
          <div class="col-md-6">
            <label for="inputEmail4" class="form-label">Lanche</label>
            <input type="text" class="form-control" id="inputLanche" placeholder="Lanche/Bebida" maxlength="200"
              name="nome" />
          </div>

          <div class="col-md-6 input--box">
            <label for="inputPassword4" class="form-label">Preço</label>
            <input type="text" class="form-control" id="inputPreco" placeholder="Preço" maxlength="200" id="preco"
              name="preco" />
          </div>

          <div class="col-md-6">
            <label for="inputAddress" class="form-label">Peso</label>
            <input type="text" class="form-control" id="inputPeso" data-mask="00:00" pattern="\(\d{2}\)\s*\d{5}-\d{4}"
              placeholder="kg/ml" id="peso" maxlength="15" name="peso" />
          </div>

          <div class="col-md-6">
            <label for="inputState" class="form-label">Tipo</label>
            <select id="inputState" name="tipo" class="form-control">
              <option disabled selected class="placeholderOption">Selecione</option>
              <option name="" value="1">Bebida</option>
              <option name="" value="2">Comida</option>
            </select>
          </div>

          <div>
            <label for="inputState" class="form-label">Imagem do alimento</label>
            <input type="file" class="form-control" id="inputPeso">
          </div>

          <div class="col-12">
            <input type="submit" class="btn btnForm"></input>
          </div>

        </form>
    </section>
  </main>
  <form enctype="multipart/form-data" method="post">
    <div>
      <label for="formFileLg" class="form-label">Imagem do alimento</label>
      <input name="img" type="file">
      <button type="submit">enviar</button>
    </div>
  </form>

  <script>
    function mascararTel(v) {
      v = v.replace(/\D/g, "");
      var patt1 = /[0-9]{0,10}[,]{1,1}[0-9]{0,4}/;
      var result = v.match(patt1);
      console.log(result)
      let inputPeso = document.querySelector("#inputPeso");
      inputPeso.value = v;
    }
  </script>

  <script src="../public/js/adm_Produtos.js"></script>

  <script src="../public/js/btn-mobile.js"></script>

  <script src="../public/js/cardapio.js"></script>

  <script src="../public/js/carrinho.js"></script>

</body>

</html>